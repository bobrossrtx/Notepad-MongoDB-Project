<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= note.title %>" type="text" name="title" id="title" class="form-control" placeholder="Title">
</div>
<div class="form-group mt-2">
    <label for="description">Description</label>
    <textarea type="text" name="description" id="description" class="form-control" placeholder="Description"><%= note.description %></textarea>
</div>
<div class="form-group mt-2">
    <label for="markdown">Markdown</label>
    <textarea required type="text" name="markdown" id="markdown" class="form-control" placeholder="markdown"><%= note.markdown %></textarea>
</div>

<a href="/" class="btn btn-danger mt-2">Cancel</a>
<button class="btn btn-success mt-2" type="submit">Save</button>
